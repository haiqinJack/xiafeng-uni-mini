// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["shop_id", "imageUrl", "title", "desc", "type"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"shop_id": {
			"bsonType": "string",
			"title": "所属门店",
			"foreignKey": "shops._id",
			"enum": {
				"collection": "shops",
				"field": "_id as value, shop_title as text"
			}
		},
		"imageUrl": {
			"bsonType": "file",
			"title": "分类图片"
		},
		"title": {
			"bsonType": "string",
			"trim": "both",
			"title": "分类名称",
			"description": "分类名称"
		},
		"desc": {
			"bsonType": "string",
			"trim": "both",
			"title": "价格描述",
			"description": "如：35元起"
		},
		"type": {
			"bsonType": "string",
			"title": "类型",
			"enum": [
				"洗护",
				"寄养"
			]
		},
		"order": {
			"bsonType": "int",
			"title": "排序",
			"description": "数字越大越靠前",
			"defaultValue": 0,
		},
		"_createTime": {
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"_updateTime": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		}

	}
}
