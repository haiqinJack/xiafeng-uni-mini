// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["nickname", "phone", "pet_group", "pet_type", "pet_sex", "pet_weight",
		"vaccines"
	],
	"permission": {
		"read": true,
		"create": true,
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "用户ID",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"avatarUrl": {
			"bsonType": "file",
			"title": "宠物头像",
			"fileMediaType": "image"
		},
		"nickname": {
			"bsonType": "string",
			"trim": "both",
			"title": "宠物昵称"
		},
		"phone": {
			"bsonType": "string",
			"trim": "both",
			"title": "联系方式",
			"pattern": "^\\+?[0-9-]{3,20}$"
		},
		"pet_group": {
			"bsonType": "string",
			"trim": "both",
			"title": "宠物种类",
			"foreignKey": "pet-group._id",
			"enum": {
				"collection": "pet-group",
				"field": "_id as value, title as text"
			}
		},
		"pet_type": {
			"bsonType": "string",
			"trim": "both",
			"title": "宠物品种",
			"foreignKey": "pet-type._id",
			"enum": {
				"collection": "pet-type",
				"field": "_id as value, title as text"
			},
			"componentForEdit": {
				"name": "uni-data-picker",
				"props": {
					"placeholder": "请选择宠物品种"
				}
			}
		},
		"vaccines": {
			"bsonType": "string",
			"title": "疫苗情况",
			"foreignKey": "vaccines._id",
			"enum": {
				"collection": "vaccines",
				"field": "_id as value, title as text"
			},
			"componentForEdit": {
				"name": "uni-data-picker",
				"props": {
					"placeholder": "请选择疫苗情况"
				}
			}
		},
		"pet_sex": {
			"bsonType": "string",
			"trim": "both",
			"title": "性别",
			"enum": ["公", "母"],
			"defaultValue": "母"
		},
		"pet_weight": {
			"bsonType": "double",
			"trim": "both",
			"title": "体重(kg)"
		},
		"isSterilization": {
			"bsonType": "string",
			"title": "是否绝育",
			"enum": ["否", "是"],
			"defaultValue": "否"
		},
		"birthday": {
			"bsonType": "date",
			"title": "出生年月"
		}

	}
}
